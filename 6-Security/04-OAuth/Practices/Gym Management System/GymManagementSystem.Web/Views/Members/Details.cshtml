@model GymManagementSystem.DAL.Models.Member

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.BirthDate.ToString("dd MMMM yyyy")
        </dd>
    </dl>
</div>



<div style="float:left; width:50%;">

    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    Amount
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Payments)
            {
                <tr>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


<div style="float:left; width:50%;">  
    <table class="table">
        <thead>
            <tr>
                <th>
                    Group Name
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End Time
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FitnessAndMembers )
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FitnessGroup.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FitnessGroup.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FitnessGroup.EndTime)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>


<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a style="margin-left:8px;" class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
