    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AccountInfo

@{
    await Html.RenderPartialAsync("../Partials/_MenuPartial.cshtml", new KeyValuePair<string, Dictionary<string, string>>
        ("Account created",
        new Dictionary<string, string>()
            {
                { "Login", "Log in"},
                { "Index", "Register"}
                                    }));
}


<div class="container">
    <main role="main" class="pb-3">z


