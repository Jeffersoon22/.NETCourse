@model Millionare.Models.Question

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Question @Model.Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionContent" class="control-label"></label>
                <input asp-for="QuestionContent" class="form-control" />
                <span asp-validation-for="QuestionContent" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.Answers.Count; i++)
            {
                <div class="form-group">
                    <span>@Model.Answers[i].AnswerChar: </span><br />
                    <input asp-for="Answers[i].AnswerContent" class="form-control" />
                    <span>True</span>
                    <input asp-for="Answers[i].IsRight" />
                    <span asp-validation-for="Answers[i].AnswerContent" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

